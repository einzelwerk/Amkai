
extends ../layouts/main

block content
  - locals.heroVideo = true
  - locals.heroIndex = true
  include ../blocks/hero
  include ../blocks/index-info
  include ../blocks/cta-res
  include ../blocks/chess-grid 
  include ../blocks/cta-booking
  include ../blocks/gallery-grid
  include ../blocks/reviews
  include ../blocks/accordion
  include ../blocks/cta
  section.section.container 
    - locals.sectionTitle = 'Eventlocations'
    - locals.left = 'true'
    include ../blocks/section-heading
    .location-cards
      each val in [1,1,1]
        article.location-card 
          a.location-card__link(href="#") 
            picture.location-card__image 
              img(src=require('@/images/location.jpg'), alt="")
            .location-card__content
              h3.location-card__title Glory Lounge
              p.location-card__count 30 personen
              p.location-card__link-text Mehr erfahren